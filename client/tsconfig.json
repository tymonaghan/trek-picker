//write a tsconfig file with module interop enabled
{
  "include": [
    "src/**/*",
    "test/**/*",
    "App.tsx",
    "/client",
    "client"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true,
    "jsx": "react",
    "sourceMap": true
  }
}
